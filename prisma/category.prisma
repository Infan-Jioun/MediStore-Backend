model Category {
    id           String      @id
    name         String
    slug         String?     @unique
    description  String?
    price        Float
    stock        Int         @default(0)
    manufacturer String?
    dosage       String?
    imageUrl     String?
    sellerId     String
    categoryId   String
    createdAt    DateTime    @default(now())
    updatedAt    DateTime    @updatedAt
    seller       User        @relation("SellerMedicines", fields: [sellerId], references: [id], onDelete: CASCADE)
    category     Category    @relation("MedicineCategory", fields: [categoryId], references: [id])
    orderItems   OrderItem[]
    reviews      Review[]    @relation("MedicineReviews")
}
